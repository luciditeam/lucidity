  "author": "Gaspard Bucher <gaspard@lucidogen.io> (http://lucidogen.io)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "dotenv": "^4.0.0",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.8",
    "ts-loader": "^2.0.3",
    "typescript": "^2.2.2"
  }
}
