{
  "name": "lucidity",
  "version": "0.0.1",
  "description": "Types and runtime utilities.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "coverage": "node scripts/test.js --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "node scripts/test.js"
  },
  "author": "Gaspard Bucher <gaspard@lucidogen.io> (http://lucidogen.io)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "coveralls": "^2.12.0",
    "dotenv": "^4.0.0",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.8",
    "typescript": "^2.2.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules|build)/"
    ],
    "testEnvironment": "node",
    "testRegex": "\\.test\\.(ts|tsx)$"
  }
}
