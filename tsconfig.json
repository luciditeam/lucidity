{ "exclude":
  [ "node_modules"
  , "output"
  , ".git"
  , "cerebral-devtools"
  , "typings/browser"
  , "typings/browser.d.ts"
  , "OLD"
  , "**/off/*"
  ]
, "compilerOptions":
  { "jsx": "react"
  , "module": "commonjs"
  , "noImplicitAny": true
  , "outDir": "output/dist"
  , "reactNamespace": "JSX"
  , "sourceMap": true
  , "strictNullChecks": true
  , "target": "es6"
  , "baseUrl": "."
  , "paths":
    { "// changes here must be in webpack/common.js too":
      [ "or fail" ]
    , "react":
      [ "node_modules/@types/react" ]
    , "app":
      [ "src/app"
      ] 
    , "auth":
      [ "src/blocks/firebase/auth" ]
    , "blocks/*":
      [ "src/blocks/*"
      ] 
    , "builder":
      [ "src/blocks/builder"
      ] 
    , "builder/*": // TestHelper
      [ "src/blocks/builder/*"
      ] 
    , "config/*":
      [ "src/config/*"
      ] 
    , "crypt":
      [ "src/blocks/crypt"
      ] 
    , "data":
      [ "src/blocks/firebase/data"
      ] 
    , "data/*":
      [ "src/blocks/firebase/data/*"
      ] 
    , "editor":
      [ "src/blocks/editor"
      ] 
    , "error":
      [ "src/blocks/error"
      ] 
    , "lucidity":
      [ "src/blocks/lucidity"
      ]
    , "lib/*":
      [ "src/lib/*"
      ]
    , "playback":
      [ "src/blocks/playback"
      ] 
    , "src/*":
      [ "src/*"
      ]
    , "styled":
      [ "src/styled"
      ]
    , "styled/*":
      [ "src/styled/*"
      ]
    , "vexdraw":
      [ "src/lib/vexdraw"
      ] 
    }
  }
, "compileOnSave": false
}
