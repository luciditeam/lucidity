{
  "name": "lucidity.editor",
  "version": "0.1.0",
  "description": "An app for live arts",
  "main": "desktop.js",
  "scripts": {
    "build": "webpack --config webpack.config.js --minify",
    "dev": "webpack --inline --config webpack.config.js && webpack-dev-server --content-base public",
    "jspm": "live-server --no-browser --ignore=assets/scss,assets/css/style.css.map",
    "maketests": "node test/makebootstrap.js",
    "sass": "node-sass -w assets/scss/main.scss -o public/css --source-map=true --output-style=compressed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/lucidogen/lucidity.editor.git"
  },
  "author": "Gaspard Bucher <gaspard@lucidogen.io> (http://lucidogen.io)",
  "license": "Commercial",
  "homepage": "https://bitbucket.org/lucidogen/lucidity.editor#readme",
  "jspm": {
    "dependencies": {
      "cerebral": "npm:cerebral@^0.33.34",
      "cerebral-model-baobab": "npm:cerebral-model-baobab@^0.4.8",
      "cerebral-module-devtools": "npm:cerebral-module-devtools@^0.6.4",
      "cerebral-module-http": "npm:cerebral-module-http@^0.1.1",
      "cerebral-view-snabbdom": "npm:cerebral-view-snabbdom@^0.5.0",
      "snabbdom": "npm:snabbdom@^0.4.2",
      "snabbdom-jsx": "npm:snabbdom-jsx@^0.3.0"
    },
    "devDependencies": {
      "typescript": "npm:typescript@^1.6.2"
    },
    "buildConfig": {
      "transpileES6": true,
      "minify": true
    }
  },
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "live-server": "^1.0.0",
    "typescript": "^1.8.10",
    "webpack": "^1.13.0",
    "node-sass": "^3.4.2"
  }
}
